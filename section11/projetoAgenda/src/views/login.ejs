<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-4">
            <h1 class="text-center">Criar ou Acessar conta</h1>
            <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
            
            <%- include('includes/messages') %>

            <div class="row">

                <div class="col-lg">
                    <h4>Faça seu cadastro</h4>
                    <p>Se você ainda não tem uma conta, preencha o formulário abaixo:</p>
                    <form class="form-cadastro" action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value= <%= csrfToken %>>
                        <div class="form-group my-3">
                          <label>Seu email</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                      
                        <div class="form-group my-3">
                          <label>Sua senha</label>
                          <input type="password" class="form-control" name="password">
                        </div>
                      
                        <button type="submit" class="btn btn-primary my-3">Criar minha conta</button>
                      </form>
                </div>

                <div class="col-lg">
                    <h4>Acessar minha agenda</h4>
                    <p>Se você já possui uma conta, faça seu login abaixo:</p>
                    <form class="form-login" action="/login/login" method="POST">
                        <input type="hidden" name="_csrf" value= <%= csrfToken %>>
                        <div class="form-group my-3">
                          <label>Seu email</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                      
                        <div class="form-group my-3">
                          <label>Sua senha</label>
                          <input type="password" class="form-control" name="password">
                        </div>
                      
                        <button type="submit" class="btn btn-primary my-3">Entrar</button>
                      </form>
                </div>

            </div>

        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>

  